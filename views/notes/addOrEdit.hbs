<h3>{{viewTitle}}</h3>
<form action="/notes/add" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{note._id}}">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="title" value="{{note.title}}">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea rows="6" class="form-control" name="content" placeholder="content">{{note.content}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/notes/list">View All</a>
    </div>
</form>